<h1 class="section-title">My Trips</h1>

<% if (!trips.length) { %>
  <div class="alert">You don’t have any trips yet. Create one from the home page.</div>
<% } %>

<div class="cards">
  <% trips.forEach(t => { %>
    <article class="card">
      <h2><%= t.trip_name %></h2>
      <p class="muted">
        <%= t.start_date ? new Date(t.start_date).toDateString() : '—' %>
        →
        <%= t.end_date ? new Date(t.end_date).toDateString() : '—' %>
      </p>
      <p class="muted">Expenditure: ₹<%= t.total_budget || 0 %></p>
      <footer class="card-foot">
        <a class="btn sm" href="/trip/<%= t.trip_id %>">View details</a>
      </footer>
    </article>
  <% }) %>
</div>
